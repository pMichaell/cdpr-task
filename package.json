{
  "name": "cdpr-task",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "lint": "eslint --fix --ext .js,.tsx,.ts .",
    "start-electronmon": "electronmon ./dist/main/main.js",
    "build-watch-main": "cross-env NODE_ENV=development webpack --watch --config webpack.config.main.js",
    "start-renderer": "cross-env NODE_ENV=development webpack serve --config webpack.config.renderer.js",
    "start-main": "concurrently -k \"npm:build-watch-main\" \"npm:start-electronmon\"",
    "delayed-start-main": "node -e \"setTimeout(() => process.exit(0), 3000)\" && npm run start-main",
    "dev": "concurrently -k \"npm:start-renderer\" \"npm:delayed-start-main\"",
    "build-renderer-prod": "cross-env NODE_ENV=production webpack --config webpack.config.renderer.js",
    "build-main-prod": "cross-env NODE_ENV=production webpack --config webpack.config.main.js",
    "dist": "npm run build-main-prod && npm run build-renderer-prod"
  },
  "keywords": [],
  "author": "Michal Pawlowicz",
  "license": "ISC",
  "devDependencies": {
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.8",
    "@types/react": "^18.0.24",
    "@types/react-dom": "^18.0.8",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "concurrently": "^7.5.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.1",
    "electron": "^21.2.0",
    "electronmon": "^2.0.2",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-xo": "^0.42.0",
    "eslint-config-xo-typescript": "^0.53.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.10",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "node-polyfill-webpack-plugin": "^2.0.1",
    "prettier": "^2.7.1",
    "react-refresh-typescript": "^2.0.7",
    "style-loader": "^3.3.1",
    "svg-inline-loader": "^0.8.2",
    "ts-loader": "^9.4.1",
    "typescript": "^4.8.4",
    "typescript-plugin-css-modules": "^3.4.0",
    "webp-loader": "^0.6.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.11.1"
  },
  "dependencies": {
    "clsx": "^1.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.4.2",
    "styled-components": "^5.3.6"
  },
  "prettier": {
    "singleQuote": true,
    "overrides": [
      {
        "files": [
          ".prettierrc",
          ".eslintrc"
        ],
        "options": {
          "parser": "json"
        }
      }
    ]
  }
}
