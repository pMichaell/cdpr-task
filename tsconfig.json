{
  "compilerOptions": {
    "incremental": true,
    "target": "es2021",
    "module": "commonjs",
    "lib": [
      "dom",
      "es2021"
    ],
    "jsx": "react-jsx",
    "strict": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "paths": {
      "assets/*": ["assets/*"],
    }
  },
  "exclude": ["node_modules", "build", "dist"]
}
